            <ul class="pagination justify-content-center">
                <li class="page-item" ><a th:href="@{${'/brands/page/' + (pageNum - 1) + '?sortField=' + sortField + '&sortDir=' + sortDir + (keyword != null ? 'keyword=' + keyword : '')}}" class="page-link" th:classappend="${currentPage <= 1 ? 'pe-none text-secondary' : ''}">Previous</a></li>
                <li th:each="i : ${#numbers.sequence(1, totalPage)}" class="page-item" th:classappend="${currentPage == i ? 'active' : ''}"><a th:href="@{${'/brands/page/' + i + '?sortField=' + sortField + '&sortDir=' + sortDir + (keyword != null ? 'keyword=' + keyword : '')}}" class="page-link">[[${i}]]</a></li>
                <li class="page-item" ><a th:href="@{${'/brands/page/' + (pageNum + 1) + '?sortField=' + sortField + '&sortDir=' + sortDir + (keyword != null ? 'keyword=' + keyword : '')}}" class="page-link" th:classappend="${currentPage >= totalPage ? 'pe-none text-secondary' : ''}">Next</a></li>
            </ul>
        </nav>
    </div>



    <div th:replace="~{fragments :: footer}"></div>
