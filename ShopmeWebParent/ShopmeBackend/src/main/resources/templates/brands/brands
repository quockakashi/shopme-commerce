                    <a th:href="@{'/brands/' + ${brand.id} + '/enabled/false?pageNum=' + ${currentPage} + '&sortField=' + ${sortField} + '&sortDir=' + ${sortDir}}"><span th:if="${brand.enabled == true}" class="fa-solid fa-circle-check fa-2x text-success"></span></a>
                    <a th:href="@{'/brands/' + ${brand.id} + '/enabled/true?pageNum=' + ${currentPage} + '&sortField=' + ${sortField} + '&sortDir=' + ${sortDir}}"><span th:if="${brand.enabled == false}" class="fa-solid fa-circle fa-2x text-secondary"></span></a>
                    <a class="me-auto" th:href="@{'/brands/edit/' + ${brand.id}}"><span class="fas fa-pen fa-2x text-info"></span></a>
                    <a th:href="@{'/brands/delete/' + ${brand.id}}" class="delete-link" th:brandId="${brand.id}" th:brandName="${brand.name}"><span class="fas fa-trash fa-2x text-danger"></span></a>
                </div>
            </div>
